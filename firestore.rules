rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // 🔐 Helper: check if user is signed in
    function isSignedIn() {
      return request.auth != null;
    }

    // 👤 Users collection
    match /users/{userId} {
      allow read: if isSignedIn(); // any signed-in user can read profiles
      allow write: if request.auth.uid == userId; // only user can edit their own profile
    }

    // 🛒 Products collection
    match /products/{productId} {
      allow read: if true; // anyone can read
      allow create: if isSignedIn(); // only signed-in users can create
      allow update, delete: if request.auth.uid == resource.data.userId; // only owner can modify
    }

    // ❤️ Favorites collection
    match /favorites/{favId} {
      allow read: if isSignedIn(); // signed-in users can read their favorites
      allow create: if isSignedIn(); // any signed-in user can add a favorite
      allow update, delete: if request.auth.uid == resource.data.userId; // only owner can modify
    }

    // 🛍️ Orders collection
    match /orders/{orderId} {
      allow create: if isSignedIn(); // only signed-in users can place orders
      allow read, update, delete: if request.auth.uid in [resource.data.buyerId, resource.data.sellerId]; 
      // only buyer or seller can access
    }

    // 🚫 Default: deny everything else
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
